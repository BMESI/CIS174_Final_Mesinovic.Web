@model CIS174_Final_Mesinovic.Web.Models.UpdateAccountModel
<script src="~/Scripts/ExtraScripts/Validator.js" type="text/javascript"></script>
<h2>Update Account</h2>

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-7">
        <input id="searchString" type="text" class="form-control" />
        <div class="col-md-2">
            <button class="btn-dark" onclick="searchAccount()">Search</button>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <form style="margin:0 auto; padding:10px;">
                <h2 class="form-signin-heading">Complete all fields</h2>
                <div class="form-group col-md-12">
                    <label for="Email" class="sr-only">Email address</label>
                    <input id="Email" placeholder="Email address" type="text" />
                </div>
                <div class="form-group col-md-12">
                    <input id="PlayerName" placeholder="PlayerName" type="text" />
                </div>
                <div class="form-group col-md-12">
                    <input id="Password" placeholder="Password" required type="text" />
                </div>
                <div class="form-group col-md-12">
                    <input id="FirstName" placeholder="First Name" required type="text" />
                </div>
                <div class="form-group col-md-12">
                    <input id="LastName" placeholder="Last Name" required type="text" />
                </div>
                <div class="form-group col-md-12">
                    <input id="Age" placeholder="Age" required type="text" />
                </div>
                <div class="form-group col-md-12">
                    <input id="Gender" placeholder="Gender" required type="text" />
                </div>
                <div class="form-group col-md-12">
                    <input id="Phone" placeholder="Phone" required type="text" />
                </div>
            </form>
        </div>
    </div>
</div>
<div id="succMessage" class="text-hide alert alert-success">Update succ'd</div>
<div id="errMessage" class="text-hide alert alert-danger">Update'nt</div>
<input id="personId" type="hidden" />
<div class="col-md-2">
    <button class="btn-dark" onclick="Register()">Update</button>
</div>
<div class="col-md-2">
    <button class="btn-dark" type="reset">Clear</button>
</div>